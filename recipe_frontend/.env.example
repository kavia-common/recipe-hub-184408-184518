# Vite environment variables for Recipe Hub frontend
# Copy to .env and adjust as needed. Do NOT commit real secrets.

# Primary API base URL (preferred)
VITE_API_BASE=https://your-backend.example.com

# Fallback API base URL if VITE_API_BASE is not set
VITE_BACKEND_URL=

# Feature flags (comma-separated). Use "mock" to force mock mode.
VITE_FEATURE_FLAGS=mock

# UI related
VITE_PORT=3000
VITE_NODE_ENV=development
VITE_ENABLE_SOURCE_MAPS=true
VITE_LOG_LEVEL=info
